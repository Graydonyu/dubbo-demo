    <!--dubbo这个服务所要暴露的服务地址所对应的注册中心-->
    <!--直连，不通过注册中心-->
    <!--<dubbo:registry address="N/A"/>-->
    <dubbo:registry address="zookeeper://139.196.72.211:2180"/>

    <dubbo:reference id="providerService" check="false"
                     interface="com.graydon.dubbo.provider.service.IProviderService"/>
</beans>